<!-- This is answer index !-->
<div class="container">
	<h1>Answer your question</h1>
	<div class="row">
			<h1><%= @question.full_question %></h1>
			<form action="/questions/<%= @question.id %>/answers" method="post">
					<table>
						<tr>
							<td><input type="text" name="answer_question"></td>
						</tr>
					
						<tr>
							<td><input type="submit" value="Answer"></td>
						</tr>
					</table>
				</form>
	</div>
</div>